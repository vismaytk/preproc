# Application Settings
APP_NAME=Data Preprocessing Tool
ENVIRONMENT=development  # development, production, testing

# Server Settings
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_PORT=8501

# File Upload Settings
MAX_UPLOAD_SIZE=10  # In MB
ALLOWED_EXTENSIONS=["csv", "txt", "jpg", "jpeg", "png"]
UPLOAD_DIR=uploads
PROCESSED_DIR=processed_data

# Processing Settings
DEFAULT_MISSING_STRATEGY=mean
DEFAULT_SCALING_METHOD=standard
DEFAULT_TEXT_LANGUAGE=english

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:8501"]

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_WORKERS=1

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB

# Processing Settings
MAX_ROWS=1000000
MAX_COLUMNS=1000
SAMPLE_SIZE=5
MAX_TEXT_LENGTH=1000000
MAX_IMAGE_DIMENSION=4096
IMAGE_QUALITY=85 